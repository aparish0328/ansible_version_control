pipeline {
  agent any
  
  stages {
    stage('SSH to Remote Machine') {
      steps {
        sshagent(['ansible-ssh-key']) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ansible@ansible.lan "echo 'Connected successfully'"
                    '''
                }
            }
        }
        stage('SCP File') {
            steps {
                sshagent(['ansible-ssh-key']) {
                    sh '''
                        scp -o StrictHostKeyChecking=no file.txt ansible@ansible.lan:/path/
                    '''
        sh '''
          ansible --version 
          ansible-playbook --version
          ansible-galaxy --version
        '''
      }
    }
  }
}
