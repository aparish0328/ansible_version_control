pipeline {
    agent any
    stages {
        stage('SSH to Remote Machine') {
            steps {
                sshagent(['ansible-ssh-key']) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no sysadmin@ansible.lan "echo 'Connected successfully'"
                    '''
                }
            }
        }
        stage('SCP File') {
            steps {
                sshagent(['ansible-ssh-key']) {
                    sh '''
                        scp -o StrictHostKeyChecking=no file.txt sysadmin@ansible.lan:/path/
                    '''
                }
            }
        }
    }
}
